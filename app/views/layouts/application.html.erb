		<div id="dvHeaderElements">
			<div id="dvSearch" class="rounded-corner4 shadow-inset" >
				<input type="text" id="headSearch" placeholder="Search entire store"/>
			</div>
			<div id="btn-LoginFb"></div>
		</div>
		<div id="dvNavigation">
			<nav class="text-shdw-white">
