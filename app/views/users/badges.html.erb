	        <h3><%= badge['name'] %></h3>
	        <div style="padding: 10px"><p><%= badge['hint']%>.</p></div>
	        <!-- <div class="date">
	            <strong>earned on</strong><br>
	            july 21, 2013
	        </div> -->
	    </div><!-- end badge -->
	<% end %>


    <div class="clear"></div>
</div><!-- end container -->